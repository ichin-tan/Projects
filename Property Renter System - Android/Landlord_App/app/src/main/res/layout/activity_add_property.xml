<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPropertyActivity"
    android:padding="20sp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Property"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"
        android:paddingLeft="10sp"/>

    <EditText
        android:id="@+id/etImgURL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Img Url(home1 - home5)"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etAddress"
        app:layout_constraintStart_toStartOf="@id/etAddress"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        android:layout_marginTop="20sp"
        android:paddingLeft="10sp"
        />

    <EditText
        android:id="@+id/etMonthlyPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Rent"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etImgURL"
        app:layout_constraintStart_toStartOf="@id/etAddress"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        android:layout_marginTop="20sp"
        android:paddingLeft="10sp"
        />

    <EditText
        android:id="@+id/etBedroom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Bedroom Count"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etMonthlyPrice"
        app:layout_constraintStart_toStartOf="@id/etAddress"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        android:layout_marginTop="20sp"
        android:paddingLeft="10sp"
        />

    <Button
        android:id="@+id/buttonAddToDatabase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add to Database"
        app:layout_constraintTop_toBottomOf="@id/etBedroom"
        app:layout_constraintStart_toStartOf="@id/etAddress"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        android:layout_marginTop="20sp"
        />

    <Button
        android:id="@+id/buttonShowLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Current Location"
        app:layout_constraintTop_toBottomOf="@id/buttonAddToDatabase"
        app:layout_constraintStart_toStartOf="@id/etAddress"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        android:layout_marginTop="10sp"
        />

    <Button
        android:id="@+id/buttonAllProperties"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All Properties"
        app:layout_constraintTop_toBottomOf="@id/buttonShowLocation"
        app:layout_constraintStart_toStartOf="@id/etAddress"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        android:layout_marginTop="10sp"
        />



    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        app:layout_constraintTop_toBottomOf="@id/buttonAllProperties"
        app:layout_constraintStart_toStartOf="@id/etAddress"
        app:layout_constraintEnd_toEndOf="@id/etAddress"
        android:layout_marginTop="10sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
